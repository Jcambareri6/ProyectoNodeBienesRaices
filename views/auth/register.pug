extends ../layout/index
block contenido
    .py-10 
        h1.text-4xl.my-10.font-extrabold.text-center Bienes 
          span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold=pagina
        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                    p(class="bg-red-600 text-white uppercase  text-xs text-center p-2 mb-1 font-bold")=error.msg
        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form(method="POST" action="/auth/registrarse/").space-y-5
                    input(type="hidden" name="_csrf" value=csrfToken) 
                    div 
                        label.block.text-sm.uppercase.text-gray-800.mb-2.font-bold(for="nombre") Tu Nombre 
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Nombre" type="text" name="nombre" value= usuario ? usuario.nombre : '')
                    div 
                        label.block.text-sm.uppercase.text-gray-800.mb-2.font-bold(for="email") Tu Email de registro 
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu email" type="text" name="email" value= usuario ? usuario.email : '')
                    div 
                        label.block.text-sm.uppercase.text-gray-800.mb-2.font-bold(for="password") Password
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu password" type="password" name="password")
                    
                    div 
                        label.block.text-sm.uppercase.text-gray-800.mb-2.font-bold(for="repetir_password")  Repetir Password
                        input#repetir_password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="repeti tu password" type="password" name="repetir_password")
                    
                    .flex.items-center.justify-between
                        a(href="/auth/login").text-gray-500.text-xs Â¿ ya tienes cuenta? inicia Sesion
                        a(href="/auth/olvide-password").text-gray-500.text-xs   olvide mi Password


                    input( class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-3 cursor-pointer" type="submit", value="Crear Cuenta")